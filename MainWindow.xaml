<Window x:Class="SideBar_Function.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SideBar_Function"
        mc:Ignorable="d"
        Title="CyberSecurity ChatBot" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid
        Height="550"
        Width="900">

        <!--Side Bar-->
        <Grid
                Height="550"
                Width="120"
                Margin="0,0,780,0"
                Background="#FF1E1E1E">

            <!--Button for chatting grid-->
            <Button
                Width="110"
                Height="40"
                Content="Chat"
                Click="Chat"
                Margin="5, 20, 5, 0"
                Background="#FF1E1E1E"
                Foreground="White"
                BorderBrush="#FF3C3C3C"
                FontWeight="Bold"
                FontSize="14"/>

            <!--Button for query-->
            <Button
                Width="110"
                Height="40"
                Content="Reminders"
                Click="Reminders"
                Margin="5, 70, 5, 0"
                Background="#FF1E1E1E"
                Foreground="White"
                BorderBrush="#FF3C3C3C"
                FontWeight="Bold"
                FontSize="14"/>

            <!--Button for quiz-->
            <Button
                Width="110"
                Height="40"
                Content="Quiz"
                Click="Quiz"
                Margin="5, 120, 5, 0"
                Background="#FF1E1E1E"
                Foreground="White"
                BorderBrush="#FF3C3C3C"
                FontWeight="Bold"
                FontSize="14"/>

            <!--Button for activity-->
            <Button
                Width="110"
                Height="40"
                Content="Activity"
                Click="Activity"
                Margin="5, 170, 5, 0"
                Background="#FF1E1E1E"
                Foreground="White"
                BorderBrush="#FF3C3C3C"
                FontWeight="Bold"
                FontSize="14"/>

            <!--Exit button-->
            <Button
                Width="110"
                Height="40"
                Content="Exit"
                Margin="5, 450, 5, 0"
                Background="#FFD50000"
                Foreground="White"
                BorderBrush="#FF3C3C3C"
                Click="Button_Click"
                FontWeight="Bold"
                FontSize="14"/>

        </Grid>
        <!--Closing grid for side bar-->

        <!--Main Content for display-->
        <Grid
            Height="550"
            Width="780"
            Margin="120, 0, 0, 0">

            <!--Chats Grid-->
            <Grid 
                Height="550"
                Width="780"
                x:Name="chats_page"
                Background="#FFF0F0F0"
                Visibility="Collapsed">

                <!--Chat Display ListView-->
                <ListView
                    x:Name="chatbot_res"
                    Margin="20,20,20,100"
                    Background="#FFFFFFFF"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    FontFamily="Segoe UI"
                    FontSize="14"/>

                <!--Question Input Area-->
                <Border Background="#FFEAEAEA" CornerRadius="5"
                        Margin="20,0,20,20" VerticalAlignment="Bottom" Height="70">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="user_questions"
                            Grid.Column="0"
                            Margin="10,10,10,10"
                            VerticalContentAlignment="Center"
                            Padding="10"
                            FontSize="14"
                            KeyDown="user_questions_KeyDown"
                            Background="#FFFFFFFF"
                            BorderBrush="#FFCCCCCC"/>

                        <Button
                            Grid.Column="1"
                            Content="Submit"
                            Margin="0,10,10,10"
                            Click="submit_question"
                            Background="#FF0078D7"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0"
                            />
                    </Grid>
                </Border>
            </Grid>
            <!--End of Chats Grid-->

            <!--Reminder Grid-->
            <Grid 
                Height="550"
                Width="780"
                x:Name="Reminders_page"
                Background="Azure"
                Visibility="Hidden">

                <TextBlock
                    Text="Set Reminder"
                    Height="30"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    FontSize="20"
                    FontWeight="Bold"/>
            </Grid>

            <!-- Quiz Grid -->
            <Grid 
                Height="550"
                Width="780"
                x:Name="Quiz_page"
                Background="#FFF0FFF0"
                Visibility="Hidden">

                <TextBlock
                    Text="Play Quiz"
                    Height="30"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    FontSize="20"
                    FontWeight="Bold"/>
            </Grid>

            <!-- Query Grid -->
            <Grid 
                Height="550"
                Width="780"
                x:Name="Query_page"
                Background="#FFFFF0F0"
                Visibility="Hidden">

                <TextBlock
                    Text="Query Page"
                    Height="30"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    FontSize="20"
                    FontWeight="Bold"/>
            </Grid>

            <!-- Activity Grid -->
            <Grid 
                Height="550"
                Width="780"
                x:Name="Activity_page"
                Background="#FFF0F0FF"
                Visibility="Hidden">

                <TextBlock
                    Text="Activity Page - Message History"
                    Height="30"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0"
                    FontSize="20"
                    FontWeight="Bold"/>
            </Grid>

        </Grid>
        <!--End of main content grid-->
    </Grid>
</Window>